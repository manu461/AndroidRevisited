<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="in.codekamp.fragmentdemo.MainActivity">





    <LinearLayout
        android:id="@+id/containerButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#123000"
        android:gravity="center"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/container1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#123000"
            >
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Launch Calculator Above"
            android:textColor="#000000"
            android:background="#ffffff"
            android:padding="20sp"
            android:id="@+id/button1"/>
    </LinearLayout>





    <LinearLayout
        android:id="@+id/containerButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#509010"
        android:layout_weight="1"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/container2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#509010">

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Launch Calcutalor Above"
            android:textColor="#000000"
            android:background="#ffffff"
            android:padding="20sp"
            android:id="@+id/button2"/>
    </LinearLayout>




</LinearLayout>
