<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"

    tools:context="com.example.stalker.fragmenttoactivitycommunicationdemo.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data from fragment will be visible here"
        android:padding="10dp"
        android:background="#45df23"
        android:textColor="#000000"
        android:id="@+id/id_textView_data_activityOne"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"

        android:background="#4253ff"
        android:id="@+id/container461">

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="Next Page"
        android:id="@+id/id_button_nextPage_activityOne"/>
</LinearLayout>
