<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorPrimary"


    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.stalker.my_calculator.MainActivity">


    <TextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/buttonBkg"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonBkg"
            android:onClick="clearPressed"
            android:text="C"
            android:textColor="@color/operator"
            android:textSize="25sp"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonBkg"
            android:onClick="divPressed"
            android:text="/"
            android:textColor="@color/operator"
            android:textSize="25sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonBkg"
            android:onClick="multiPressed"
            android:text="x"
            android:textColor="@color/operator"
            android:textSize="25sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonBkg"
            android:onClick="correctPressed"
            android:text="Correct"
            android:textColor="@color/operator"
            android:textSize="25sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonBkg"
            android:onClick="sevenPressed"
            android:text="7"
            android:textColor="@color/operand"
            android:textSize="25sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonBkg"
            android:onClick="eightPressed"
            android:text="8"
            android:textColor="@color/operand"
            android:textSize="25sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonBkg"
            android:onClick="ninePressed"
            android:text="9"
            android:textColor="@color/operand"
            android:textSize="25sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonBkg"
            android:onClick="subPressed"
            android:text="-"

            android:textColor="@color/operator"
            android:textSize="25sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonBkg"
            android:onClick="fourPressed"
            android:text="4"
            android:textColor="@color/operand"
            android:textSize="25sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonBkg"
            android:onClick="fivePressed"
            android:text="5"
            android:textColor="@color/operand"
            android:textSize="25sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonBkg"
            android:onClick="sixPressed"
            android:text="6"
            android:textColor="@color/operand"
            android:textSize="25sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonBkg"
            android:onClick="sumPressed"
            android:text="+"
            android:textColor="@color/operator"
            android:textSize="25sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonBkg"
            android:onClick="onePressed"
            android:text="1"
            android:textColor="@color/operand"
            android:textSize="25sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonBkg"
            android:onClick="twoPressed"
            android:text="2"
            android:textColor="@color/operand"
            android:textSize="25sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonBkg"
            android:onClick="threePressed"
            android:text="3"
            android:textColor="@color/operand"
            android:textSize="25sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonBkg"
            android:text="( )"
            android:textColor="@color/operator"
            android:textSize="25sp"

            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonBkg"
            android:onClick="zeroPressed"

            android:text="0"
            android:textColor="@color/operand"
            android:textSize="25sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonBkg"
            android:onClick="dotPressed"
            android:text="."
            android:textColor="@color/operand"
            android:textSize="25sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonBkg"
            android:text="+/-"
            android:textColor="@color/operand"
            android:textSize="25sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonBkg"
            android:onClick="equalPressed"
            android:text="="
            android:textColor="@color/equal"
            android:textSize="25sp" />
    </LinearLayout>


</LinearLayout>
